    "type": "library",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "4"
    },
    "license": "mit",
    "authors": [
        {
            "name": "ErickJMenezes",
            "email": "erick123j@hotmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
